<% content_for :navbar do %>
  <li class="active"><a href="#overview">Overview</a></li>
  <li><a href="#features">How it Works</a></li>
  <li><a href="#signup">Signup</a></li>
<% end %>

<div id="overview" class="section expanded">
  <div class="container auth">
    <div class="header-bg">
      <h1>Shop online. Ship anywhere.</h1>
      <h2>Website doesn't ship to your country? We'll do it for you.</h2>
    </div>
    <br><br>
    <%= link_to "Get Started Now", new_user_registration_path, :class => "btn button-starter" %>
    </div>
  </div>
</div>

<div id="features" class="section">
  <div class="container">
    <h1>Meet OhShip</h1>
    <hr class="soften" />
    <div class="row-fluid">
      <div class="col-md-4">
        <div class="step">
          <%= image_tag "../img/ribbon1.png", :class => "ribbon" %>
          <%= image_tag "../img/checkout.png", :class => "process" %>
          <div class="step-caption">
            <p>Sign up and get your OhShip address.</p>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="step">
          <%= image_tag "../img/ribbon2.png", :class => "ribbon" %>
          <%= image_tag "../img/ohship-lg.png", :class => "process", :style => "top: 125px !important;" %>
          <div class="step-caption">
            <p>Shop like usual and have the item delivered to your OhShip address.</p>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="step last">
          <%= image_tag "../img/ribbon3.png", :class => "ribbon" %>
          <%= image_tag "../img/house-gift.png", :class => "process" %>
          <div class="step-caption">
            <p>OhShip sends the item to you.</p>
          </div>
        </div>
      </div>
    </div>
    <div class="row-fluid">
      <%= link_to "Read more", details_path, :class => "btn btn-primary btn-xlg", :id => 'homeReadMore' %>
    </div>
  </div>
</div>

<div class="featurette featurette-1">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <h2 class="featurette-heading">Safe. Secure.</h2>
        <p class="lead">We take the utmost care in making sure your merchandise is
         shipped to you in perfect condition. Track your item every step of the way.</p>
      </div>
    </div>
  </div>
</div>

<div class="featurette featurette-2">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-6 right">
        <h2 class="featurette-heading">Convenient & Affordable. No signup fee.</h2>
        <p class="lead">OhShip charges a 20% service fee on the shipping costs.
        So if shipping from your OhShip address to you costs $10, our service fee would be an additional $2, regardless of the
        value of the item itself.</p>
      </div>
    </div>
  </div>
</div>

<% if @concierge_service %>
  <div class="featurette featurette-3">
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <h2 class="featurette-heading">Website won’t accept your credit card? We’ve got you covered.
          </h2>
          <p class="lead">Some websites only accept credit cards or billing addresses from their
            country. Tell us which item you want and we’ll place the order for you.</p>
          <p><%= link_to "Find out more", concierge_path, :class => "btn btn-primary btn-lg", :id => 'homeConcierge' %></p>
        </div>
      </div>
    </div>
  </div>
<% end %>

<div id="signup" class="section expanded">
  <div class="container center">
    <h1>Get started with OhShip!</h1>
    <br>
    <%= link_to "Sign up", new_user_registration_path, :class => "btn button-starter", :id => "homeSignUp" %>
    <div class="row hidden">
      <div class="col-md-5" style="margin: auto;">
        <div class="title title-starter">
          Shop online. Ship anywhere.
        </div>
        <div class="signup-inner">
          <!--<div class="price">
            20%
          </div>
          <div class="renewal">
            as additional fees
          </div>
          <hr />-->
          <p>No hidden fees</p>
          <hr />
          <p>No signup fee</p>
          <br>
          <% #Sign up for buying %>
          <%= link_to "Sign up", "#overview", :class => "btn button-starter"%>
        </div>
      </div>
      <div class="col-md-5 col-md-offset-1 hidden">
        <div class="title title-monthly">
          Become an OhShipper
        </div>
        <div class="signup-inner">
          <div class="price">
            50%
          </div>
          <div class="renewal">
            commission on packages you ship
          </div>
          <hr />
          <p>Simple background check</p>
          <hr />
          <p>Make money easily</p>
          <br>
          <br>
          <% #Become an OhShipper %>
          <%= link_to "Coming soon", "#overview", :class => "pure-button button-monthly"%>
        </div>
      </div>
    </div>
  </div>
</div>

<div id="social" class="section">
  <div class="container center">
    <h1 class="center no-top-margin">Find us on social networks</h1>
    <%= link_to "http://www.facebook.com/ohshipme", :id => "homeFacebookPage" do %>
      <%= fa_stacked_icon "facebook inverse", base: "circle", :class => "fa-5x" %>
    <% end %>
    <%= link_to "http://twitter.com/OhShipMe", :id => "homeTwitterPage" do %>
      <%= fa_stacked_icon "twitter inverse", base: "circle", :class => "fa-5x" %>
    <% end %>
  </div>
</div>
