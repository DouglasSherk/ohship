<div class="row-fluid auth">
  <div class="col-md-12 center">
    <div class="col-md-6" style="margin: auto; float: none; text-align: left;">
      <h3>Change your password</h3>

      <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
        <% unless devise_error_messages!.empty? %>
          <div class="alert alert-danger">
            <%= devise_error_messages! %>
          </div>
        <% end %>

        <%= f.hidden_field :reset_password_token %>

        <div class="form-group"><%= f.label :password, "New password" %>
        <%= f.password_field :password, :autofocus => true, :class => 'form-control' %></div>

        <div class="form-group"><%= f.label :password_confirmation, "Confirm new password" %>
        <%= f.password_field :password_confirmation, :class => 'form-control' %></div>

        <div class="row row-gutterless">
          <div class="col-xs-6">
            <div class="form-group"><%= f.submit "Change password", :class => "btn btn-primary" %></div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
