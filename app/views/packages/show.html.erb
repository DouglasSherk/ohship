<div class="page-heading row">
  <div class="col-md-8">
    <h2>Package Details</h2>
  </div>
</div>

<dl class="dl-horizontal">
  <dt>Status</dt>
  <dd><%= @package.state_to_s %></dd>

  <br />

  <dt>Description</dt>
  <dd><%= @package.description %></dd>

  <dt>Value</dt>
  <dd><%= @package.value_cents.nil? ? '-' : sprintf('$%.02f', @package.value_cents/100.0) %></dd>

  <dt>Package dimensions</dt>
  <dd><%= @package.length_cm %>cm x <%= @package.width_cm %>cm x <%= @package.height_cm %>cm</dd>

  <dt>Package weight</dt>
  <dd><%= @package.weight_kg %>kg</dd>
</dl>
