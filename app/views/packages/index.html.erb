<% if @signup %>
  <div class="alert alert-info">
    Welcome to OhShip! To get started, you can <%= link_to "create a package", new_package_path %>. You can
    buy your product normally from any retailer, then instead of having it shipped to them, you ship it to us.
    We'll provide you with an address to have the product shipped to.
  </div>
<% end %>

<div class="page-heading row">
  <div class="col-xs-8">
    <h2>Packages</h2>
  </div>
  <div class="col-xs-4 right">
    <% if is_shippee? %>
      <%= link_to 'Create Package', new_package_path, :class => 'btn btn-primary' %>
    <% end %>
  </div>
</div>

<table class="table table-hover table-bordered table-striped">
  <% if @packages.empty? %>
    <tr>
      <td>
        No packages available.
        <% if is_shippee? %> Perhaps you'd like to <%= link_to 'ship one?', new_package_path %><% end %>
      </td>
    </tr>
  <% else %>
    <tr>
      <th>Description</th>
      <% if is_shipper? %><th>Origin Country</th><% end %>
      <th>Status</th>
      <th class="hidden-xs">Last updated</th>
    </tr>
    <% @packages.each do |package| %>
      <tr data-href="<%= package_path(package) %>">
        <td>
          <a href="/packages/<%= package.id %>"><%= package.description %></a>
        </td>
        <% if is_shipper? %>
          <td><%= package.origin_country %>
        <% end %>
        <td>
          <%= package.status(current_user.user_type) %>
        </td>
        <td class="hidden-xs">
          <%= package.updated_at.to_formatted_s(:long_ordinal) %>
        </td>
      </tr>
    <% end %>
  <% end %>
</table>
