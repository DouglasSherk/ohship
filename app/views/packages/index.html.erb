<div class="page-heading row">
  <div class="col-md-8">
    <h2>Packages</h2>
  </div>
  <div class="col-md-4 right">
    <%= link_to 'Create Package', new_package_path, :class => 'btn btn-primary' %>
  </div>
</div>

<table class="table table-hover table-bordered table-striped">
  <% if @packages.empty? %>
    <tr>
      <td>No packages available. Perhaps you'd like to <%= link_to 'ship one?', new_package_path %></td>
    </tr>
  <% else %>
    <tr>
      <th>Description</th>
      <% if current_user.user_type == User::SHIPPER %><th>Origin Country</th><% end %>
      <th>Status</th>
      <th>Last updated</th>
    </tr>
    <% @packages.each do |package| %>
      <tr >
        <td>
          <a href="/packages/<%= package.id %>"><%= package.description %></a>
        </td>
        <% if current_user.user_type == User::SHIPPER %>
          <td><%= package.origin_country %>
        <% end %>
        <td>
          <%= package.status(current_user.user_type) %>
        </td>
        <td>
          <%= package.updated_at.to_formatted_s(:long_ordinal) %>
        </td>
      </tr>
    <% end %>
  <% end %>
</table>
